
digraph {
    rankdir=LR;

    // States
    q0 [shape=circle]
    q1 [shape=circle]
    q2 [shape=circle]
    q3 [shape=doublecircle]

    // Start
    start [shape=point]
    start -> q0

    // Transitions
    q0 -> q0 [label="a"]
    q0 -> q1 [label="b"]
    q1 -> q1 [label="a"]
    q1 -> q2 [label="a"]
    q1 -> q3 [label="b"]
    q2 -> q2 [label="a"]
    q2 -> q3 [label="b"]
}
